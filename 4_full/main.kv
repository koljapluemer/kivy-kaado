#:kivy 1.0
#:import Header widgets.Header


<WelcomeScreen>:
    name: "welcome_screen"

    BoxLayout:
        orientation: "vertical"
        padding: 10

        Header:
            size_hint_y: 1

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 10

            Label:
                text: "Welcome!"
                size_hint_y: None
                height: 50

            Label:
                text: "This is offline Kaado."
                size_hint_y: None
                height: 50


<QueueScreen>:
    name: "queue_screen"

    BoxLayout:
        orientation: "vertical"
        padding: 10

        Header:
            size_hint_y: 1

        BoxLayout:
            size_hint_y: 10

            Label:
                text: "Queue."
                size_hint_y: None
                height: 50

<CardFormScreen>:
    name: "card_form_screen"
    front: front
    back: back

    BoxLayout:
        orientation: "vertical"
        padding: 10

        Header:
            size_hint_y: 1

        BoxLayout:
            size_hint_y: 10


            Label:
                text: "Add a Card"
                size_hint_y: None
                height: 50

            TextInput:
                id: front
                hint_text: "Front"
                multiline: True

            TextInput:
                id: back
                hint_text: "Back"
                multiline: True

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 50

                Button:
                    text: "Add Card"
                    on_release: root.add_card()

                Button:
                    text: "Cancel"
                    on_release: root.cancel()



<AboutScreen>:
    name: "about_screen"

    BoxLayout:
        orientation: "vertical"

        Header:
            size_hint_y: 1

<CardListScreen>:
    name: "card_list_screen"

    BoxLayout:
        orientation: "vertical"

        Header:
            size_hint_y: 1

        BoxLayout:
            size_hint_y: 10
            ScrollView:
                name: "card_list_scroll_view"
                do_scroll_x: False
                do_scroll_y: True
                BoxLayout:
                    height: 1000
                    id: card_list_box_layout
                    orientation: "vertical"