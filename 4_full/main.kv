#:kivy 1.0
#:import Header widgets.Header


<WelcomeScreen>:
    name: "welcome_screen"

    BoxLayout:
        orientation: "vertical"
        padding: 10

        Header:

        Label:
            text: "Welcome!"
            size_hint_y: None
            height: 50


<QueueScreen>:
    name: "queue_screen"

    BoxLayout:
        orientation: "vertical"
        padding: 10

        Header:

        Label:
            text: "Queue."
            size_hint_y: None
            height: 50

<CardFormScreen>:
    name: "card_form_screen"
    front: front
    back: back

    BoxLayout:
        orientation: "vertical"
        padding: 10

        Header:

        Label:
            text: "Add a Card"
            size_hint_y: None
            height: 50

        TextInput:
            id: front
            hint_text: "Front"
            multiline: True

        TextInput:
            id: back
            hint_text: "Back"
            multiline: True

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50

            Button:
                text: "Add Card"
                on_release: root.add_card()

            Button:
                text: "Cancel"
                on_release: root.cancel()

<AboutScreen>:
    orientation: "vertical"

    Header:
        id: header
        title: "About"

    ScrollView:
        BoxLayout:
            id: header_list
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
